#!/bin/bash

set -e
set -o pipefail

unset GIT_DIR

BUILD_DIR="$1"
BUILDPACK_DIR="$(dirname $(dirname $0))"
CACHE_DIR="$2"

mkdir -p "$BUILD_DIR"
mkdir -p "$CACHE_DIR"
cd "$BUILD_DIR"

SW_DIR=.sw
mkdir -p $SW_DIR

install() {
  DEB_URL=$1
  DIR=$(mktemp -d)
  curl -Lf $DEB_URL -o $DIR/deb
  dpkg-deb -x $DIR/deb $SW_DIR
  rm -rf $DIR
}

install https://mirrors.edge.kernel.org/ubuntu/pool/universe/r/runit/runit_2.1.1-6.2ubuntu3_amd64.deb

mkdir -p .profile.d
cat > .profile.d/runit.sh <<EOF
export PATH="\$HOME/$SW_DIR/usr/bin:\$PATH"
EOF

mkdir -p bin
cp "$BUILDPACK_DIR/bin/runsvdir-dyno" bin
cp "$BUILDPACK_DIR/bin/runsvdir-populate-service-dir" bin
